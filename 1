model = Sequential()
model.add(Dense(64, input_shape=(10,), activation='relu'))
model.add(Dense(33, activation='softmax'))

model.compile(loss='categorical_crossentropy', optimizer='adam')


model.fit(input_data, output_data , epochs=40)
